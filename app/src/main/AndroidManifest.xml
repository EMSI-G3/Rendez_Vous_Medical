<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rendez_vous">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- 1. LOGIN SCREEN (Start Here) -->
        <activity
            android:name=".AccessPoint.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2. REGISTER SCREEN -->
        <activity
            android:name=".AccessPoint.RegisterActivity"
            android:exported="false" />

        <!-- 3. PATIENT SCREEN (For Clients) -->
        <activity
            android:name=".Patient.PatientActivity"
            android:exported="false" />

        <!-- 4. SCHEDULE SCREEN (For Doctor/Secretary) -->
        <activity
            android:name=".Medicine.ScheduleActivity"
            android:exported="false" />
        <activity android:name=".Medicine.SecretaryActivity" />
        <activity android:name=".Medicine.DoctorActivity" />
        <activity android:name=".Profile.EditProfileActivity"/>


    </application>

</manifest>